<UserControl x:Class="Diagnosis.Common.Presentation.Controls.Search.Filter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:beh="clr-namespace:Diagnosis.Common.Presentation.Behaviors"
             xmlns:controls="clr-namespace:Diagnosis.Common.Presentation.Controls"
             xmlns:diag="http://schemas.smg.com/diagnosis"
             xmlns:mahControls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             x:Name="filter"
             Focusable="True"
             GotFocus="filter_GotFocus"
             d:DesignHeight="30"
             d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <TextBox x:Name="input"
                 GotKeyboardFocus="input_GotKeyboardFocus"
                 beh:FocusExtension.IsFocused="{Binding IsFocused, Mode=TwoWay}"
                 mahControls:TextBoxHelper.Watermark="{Binding WatermarkText, ElementName=filter}"
                 Text="{Binding Query, UpdateSourceTrigger=PropertyChanged}">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}"
                       BasedOn="{StaticResource {x:Type TextBox}}">
                    <Setter Property="mahControls:TextBoxHelper.ClearTextButton"
                            Value="True" />
                    <!--<Style.Triggers>
                        <Trigger Property="mahControls:TextBoxHelper.HasText"
                                 Value="False">
                            <Setter Property="mahControls:TextBoxHelper.ClearTextButton"
                                    Value="False" />
                        </Trigger>
                        <Trigger Property="mahControls:TextBoxHelper.HasText"
                                 Value="True">
                            <Setter Property="mahControls:TextBoxHelper.ClearTextButton"
                                    Value="True" />
                        </Trigger>
                    </Style.Triggers>-->
                </Style>
            </TextBox.Style>
        </TextBox>
    </Grid>
</UserControl>