<Application x:Class="Diagnosis.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Diagnosis.ViewModels"
             
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <vm:PatientViewModel x:Key="patientVM" />
        <vm:SymptomViewModel x:Key="symptomVM" />
        <vm:SearchViewModel x:Key="searchVM" />
        
        <Style TargetType="TextBlock" x:Key="watermark">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin">
                <Setter.Value>
                    <Thickness Left="5"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
