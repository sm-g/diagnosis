<Application x:Class="Diagnosis.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Diagnosis.ViewModels"
             xmlns:conv="clr-namespace:Diagnosis.Converters"
             
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <conv:IHierarchicalCheckableToBackground x:Key="IHierarchicalCheckableToBackground" />

        <Style TargetType="TextBlock" x:Key="watermark">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin">
                <Setter.Value>
                    <Thickness Left="5"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
