<UserControl x:Class="Diagnosis.Controls.EducationChooser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Diagnosis.Controls"
             xmlns:local="clr-namespace:Diagnosis"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ComboBox ItemsSource="{Binding}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Title}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
            <ComboBox.DataContext>
                <ObjectDataProvider
                          MethodName="CreateEducationList"
                          ObjectType="{x:Type local:DataCreator}" />
            </ComboBox.DataContext>

            <controls:WatermarkService.Watermark>
                <TextBlock Style="{StaticResource watermark}">Образование</TextBlock>
            </controls:WatermarkService.Watermark>
        </ComboBox>
    </Grid>
</UserControl>