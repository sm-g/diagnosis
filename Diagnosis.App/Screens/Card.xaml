<UserControl x:Class="Diagnosis.App.Screens.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:forms="clr-namespace:Diagnosis.App.Controls.Forms"
             xmlns:card="clr-namespace:Diagnosis.App.Controls.Card"
             xmlns:screen="clr-namespace:Diagnosis.App.Screens"
             xmlns:conv="clr-namespace:Diagnosis.App.Converters"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="500">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="1">
                <Button Command="{Binding Editable.CommitCommand}" Content="Сохранить"/>
            </StackPanel>
        </Grid>

        <TabControl Padding="0">
            <TabControl.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="../Styles/TabControl.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </TabControl.Resources>
            <TabItem >
                <TabItem.Header>
                    <card:PatientHeader />
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="10">
                    <StackPanel>
                        <forms:PatientEditor/>

                        <Separator />

                        <forms:PropertiesChooser Margin="0,5" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Курсы" IsSelected="True" HorizontalContentAlignment="Stretch">
                <DockPanel>
                    <Grid Margin="10,10,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Button Command="{Binding CurrentDoctor.StartCourseCommand}"
                            CommandParameter="{Binding}">Начать курс</Button>

                        <ListView ItemsSource="{Binding CoursesManager.Courses}"
                                  SelectedItem="{Binding CoursesManager.SelectedCourse}"
                                  Style="{StaticResource list}"
                                  Grid.Row="2"
                                  SelectionMode="Single">
                            <ListView.InputBindings>
                                <KeyBinding Key="Delete" Command="{Binding CoursesManager.SelectedCourse.Editable.DeleteCommand}" />
                            </ListView.InputBindings>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <card:Course Width="170" />
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="{x:Type ListViewItem}">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Margin" Value="0,5,0,5" />
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </Grid>
                    <card:AppointmentsList DataContext="{Binding CoursesManager.SelectedCourse}" 
                                           DockPanel.Dock="Top"
                                           Margin="10,10,10,0" />
                    <card:Appointment DataContext="{Binding CoursesManager.SelectedCourse.SelectedAppointment}"
                                      Margin="10" />
                </DockPanel>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>