<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:controls="clr-namespace:Diagnosis.App.Controls"
        xmlns:vm="clr-namespace:Diagnosis.App.ViewModels"
        xmlns:screen="clr-namespace:Diagnosis.App.Screens"
        x:Class="Diagnosis.App.Windows.MainWindow"
        mc:Ignorable="d"
        x:Name="root"
        Loaded="root_Loaded"
        Title="MainWindow" Height="700" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/TabControl.xaml" />
                <ResourceDictionary Source="../Styles/EmptyToggle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type vm:LoginViewModel}">
                <screen:Login />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:WordsProducer}">
                <screen:Words />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:PatientViewer}">
                <screen:Card />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:PatientViewModel}">
                <screen:Card />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:SearchTester}">
                <screen:SearchTester />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:PatientsListViewModel}">
                <screen:Patients />
            </DataTemplate>            
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <Grid x:Name="header"
              Grid.ColumnSpan="2"
              Visibility="{Binding LoginOpened, Converter={StaticResource NegBooleanToVisibilityConverter}}">
            <Grid.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}" />
            </Grid.Background>
            <Menu>
                <MenuItem Header="_Пациенты">
                    <MenuItem Command="{Binding OpenPatientsCommand}" Header="_Все пациенты" />
                    <MenuItem Command="{Binding AddPatientCommand}" Header="_Новый..."  />
                </MenuItem>
                <MenuItem Header="_Вид">
                    <MenuItem Header="_Слова" Command="{Binding OpenWordsCommand}" />
                    <!--<MenuItem IsCheckable="true" IsChecked="{Binding SearchTesterOpened}" Header="_Все поиски" />-->
                    <MenuItem IsCheckable="true" IsChecked="{Binding SearchAsideVisible}" Header="_Поиск" />
                    <MenuItem IsCheckable="true" IsChecked="{Binding PatientsAsideVisible}" Header="_Пациенты" />
                </MenuItem>
            </Menu>
            <Menu HorizontalAlignment="Center">
                <CheckBox IsChecked="{Binding FastAddingMode}">_Осмотр пациентов</CheckBox>
            </Menu>

            <Menu HorizontalAlignment="Right">
                <MenuItem Header="{Binding Login.DoctorsProducer.CurrentDoctor, Converter={StaticResource ManToShortName}}">
                    <MenuItem Header="_Выйти" Command="{Binding LogoutCommand}" />
                    <MenuItem Header="_Настройки..." Command="{Binding OpenSettingsCommand}" />
                </MenuItem>
            </Menu>
        </Grid>

        <DockPanel x:Name="aside"
                   Visibility="{Binding LoginOpened, Converter={StaticResource NegBooleanToVisibilityConverter}}"
                   Grid.Row="1"                   
                   Grid.Column="1"
                   Grid.RowSpan="2">
            <TabControl TabStripPlacement="Right" 
                        Margin="0,0,-2,0"
                        Padding="0">
                <TabControl.Style>
                    <Style TargetType="TabControl">
                        <Setter Property="BorderThickness" Value="1,0,1,0"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding NoAsideVisible}" Value="True">
                                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TabControl.Style>
                <TabItem IsSelected="{Binding PatientsAsideVisible}"
                         Style="{StaticResource tabHeaderWithLine}">
                    <TabItem.Header>
                        <ToggleButton IsChecked="{Binding PatientsAsideVisible}" Style="{StaticResource emptyToggle}">
                            <TextBlock Style="{StaticResource verticalTextBlock}">Пациенты</TextBlock>
                        </ToggleButton>
                    </TabItem.Header>
                    <screen:PatientsAside x:Name="patientsAside"
        			                 DataContext="{Binding PatientsAside}"
        			                 Margin="5,0,5,0" />
                </TabItem>
                <TabItem IsSelected="{Binding SearchAsideVisible}"
                         Style="{StaticResource tabHeaderWithLine}">
                    <TabItem.Header>
                        <ToggleButton IsChecked="{Binding SearchAsideVisible}" Style="{StaticResource emptyToggle}">
                            <TextBlock Style="{StaticResource verticalTextBlock}">Поиск</TextBlock>
                        </ToggleButton>
                    </TabItem.Header>
                    <screen:Search x:Name="search"
                                   DataContext="{Binding Search}" />
                </TabItem>
            </TabControl>
        </DockPanel>

        <Frame x:Name="frame"
               Grid.Row="1"/>
        <ContentControl Content="{Binding CurrentScreen}"
                        Grid.Row="2" />
    </Grid>
</Window>