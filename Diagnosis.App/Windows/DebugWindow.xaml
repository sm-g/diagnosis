<Window x:Class="Diagnosis.App.Windows.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="Manual"
        ShowInTaskbar="False"
        ShowActivated="False"
        Topmost="True"
        Title="Debug"
        Width="450">
    <Grid>
        <TextBox ScrollViewer.VerticalScrollBarVisibility="Auto"
                 x:Name="Log"
                 Grid.Row="1"
                 IsReadOnly="True"
                 AcceptsReturn="True"
                 TextChanged="Log_TextChanged"
                 Height="Auto"
                 Margin="0,10,0,0"
                 VerticalContentAlignment="Stretch" />
    </Grid>
</Window>