<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:controls="clr-namespace:Diagnosis.App.Controls"
        xmlns:vm="clr-namespace:Diagnosis.App.ViewModels"
        xmlns:screen="clr-namespace:Diagnosis.App.Screens"
        mc:Ignorable="d"
        DataContext="{DynamicResource vm}"
        x:Class="Diagnosis.App.MainWindow"
        x:Name="root"
        Title="MainWindow" Height="450" Width="650">
    <Window.Resources>
        <vm:MainWindowViewModel x:Key="vm" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <screen:Login x:Name="login"
			    DataContext="{Binding LoginVM}"
			    Visibility="{Binding DataContext.IsLoginActive, Converter={StaticResource BooleanToVisibilityConverter}, ElementName=root}"
                Grid.RowSpan="2"
 />
        
        <Grid x:Name="header"
              Visibility="{Binding IsLoginActive, Converter={StaticResource NegBooleanToVisibilityConverter}}">
            <Grid.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}" />
            </Grid.Background>
            <Menu>
                <MenuItem Header="Справочники">
                    <MenuItem Header="Симптомы" Command="{Binding EditSymptomsDirectoryCommand}" />
                    <MenuItem Header="Диагнозы" Command="{Binding EditDiagnosisDirectoryCommand}" />
                </MenuItem>
            </Menu>

            <CheckBox IsChecked="{Binding FastAddingMode}"
				HorizontalAlignment="Center" Content="Приём" />

            <Menu HorizontalAlignment="Right">
                <MenuItem Header="{Binding LoginVM.DoctorsManager.CurrentDoctor.ShortName}">
                    <MenuItem Header="Выйти" Command="{Binding LogoutCommand}" />
                </MenuItem>
            </Menu>
        </Grid>

        <Grid x:Name="workbench" 
              Grid.Row="1" 
              Visibility="{Binding IsLoginActive, Converter={StaticResource NegBooleanToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <screen:Words x:Name="directory"
                               DataContext="{Binding WordsManager}"
                               Visibility="{Binding DataContext.IsWordsEditing, Converter={StaticResource BooleanToVisibilityConverter}, ElementName=root}"
                               Grid.Column="1"
                               Margin="10" />

            <screen:Card x:Name="card"
                         DataContext="{Binding CardVM}"
                         Visibility="{Binding DataContext.IsWordsEditing, Converter={StaticResource NegBooleanToVisibilityConverter}, ElementName=root}"
                         Grid.Column="1"
                         Margin="10" />

            <Expander IsExpanded="{Binding IsPatientsVisible}"
                      ExpandDirection="Right"
			          RenderTransformOrigin="0.5,0.5"
                      BorderThickness="0,0,1,0"
                      Padding="1,0,3,0"
			          HorizontalAlignment="Left">
                <Expander.BorderBrush>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveBorderColorKey}}"/>
                </Expander.BorderBrush>
                <Expander.Header>
                    <TextBlock RenderTransformOrigin="0.5,0.5">
                        <TextBlock.LayoutTransform>
                            <TransformGroup>
                                <RotateTransform Angle="-90" />
                            </TransformGroup>
                        </TextBlock.LayoutTransform><Run Text="Пациенты" /></TextBlock>
                </Expander.Header>
                <screen:Patients x:Name="patients"
                                 DataContext="{Binding PatientsVM}"
                                 Margin="10" />
            </Expander>
        </Grid>
    </Grid>
</Window>