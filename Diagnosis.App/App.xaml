<Application x:Class="Diagnosis.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Diagnosis.App.ViewModels"
             xmlns:conv="clr-namespace:Diagnosis.App.Converters"
             
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <conv:IHierarchicalCheckableToBackground x:Key="IHierarchicalCheckableToBackground" />
        <conv:NegBooleanToVisibilityConverter x:Key="NegBooleanToVisibilityConverter" />
        <conv:NegateConverter x:Key="NegateBoolean" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <Style TargetType="TextBlock" x:Key="ScreenTitle">
            <Setter Property="FontSize" Value="24"/>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="label">
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Width" Value="150"/>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="watermark">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin">
                <Setter.Value>
                    <Thickness Left="5"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
