<Application x:Class="Diagnosis.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Diagnosis.App.ViewModels"
             xmlns:conv="clr-namespace:Diagnosis.App.Converters"
             
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <conv:IHierarchicalCheckableToBackground x:Key="IHierarchicalCheckableToBackground" />
        <conv:NegBooleanToVisibilityConverter x:Key="NegBooleanToVisibilityConverter" />
        <conv:NegateConverter x:Key="NegateBoolean" />
        <conv:CountToVisibility x:Key="CountToVisibility" />
        <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <conv:AgeToYearsLabel x:Key="AgeToLabel" />
        <conv:BoolToSexSign x:Key="SexToSign" />

        <Style TargetType="TextBlock" x:Key="ScreenTitle">
            <Setter Property="FontSize" Value="24"/>
        </Style>
        
        <Style TargetType="Label" x:Key="label120">
            <Setter Property="Width" Value="120"/>
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="Label" x:Key="label60">
            <Setter Property="Width" Value="60"/>
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        
        <Style TargetType="TextBlock" x:Key="watermark">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin">
                <Setter.Value>
                    <Thickness Left="5"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="ListView" x:Key="list">
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </Application.Resources>
</Application>
