<UserControl xmlns:editors="clr-namespace:Diagnosis.App.Controls.Editors"
             xmlns:controls="clr-namespace:Diagnosis.App.Controls"
             x:Class="Diagnosis.App.Controls.Editors.HealthRecordEditorShared"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:Diagnosis.App.ViewModels"
             x:Name="editor"
             mc:Ignorable="d"
             d:DesignHeight="150" d:DesignWidth="600">
    <!--DataContext is HrEditorViewModel-->
    <UserControl.Resources>
        <Style TargetType="Label" BasedOn="{StaticResource label90}" />
    </UserControl.Resources>
    <Grid DataContext="{Binding HealthRecord}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <StackPanel VerticalAlignment="Center">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Padding" Value="5,10" />
                    <Setter Property="FontSize" Value="16 " />
                    <Setter Property="Margin" Value="0,5,5,5" />
                </Style>
            </StackPanel.Resources>

            <Button Command="{Binding DataContext.MoveHrSelectionCommand, RelativeSource={RelativeSource AncestorType=UserControl, AncestorLevel=2}}"
                    CommandParameter="{StaticResource True}">↑</Button>
            <Button Command="{Binding DataContext.MoveHrSelectionCommand, RelativeSource={RelativeSource AncestorType=UserControl, AncestorLevel=2}}"
                    CommandParameter="{StaticResource False}" >↓</Button>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <StackPanel.Resources>
                <Style TargetType="DockPanel" BasedOn="{StaticResource formLine}" />
            </StackPanel.Resources>
            <DockPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <controls:AutoComplete DataContext="{Binding DataContext.AutoComplete, ElementName=editor}" />
                    <TextBox Text="{Binding NumValue, StringFormat={}{0:G6}}"
                             ToolTip="Числовое значение"
                             Width="60"
                             Margin="10,0,0,0"
                             Grid.Column="1"
                             HorizontalContentAlignment="Right" HorizontalAlignment="Right">
                        <controls:WatermarkService.Watermark>
                            <TextBlock Style="{StaticResource watermark}" Margin="5,0,0,0">число</TextBlock>
                        </controls:WatermarkService.Watermark>
                    </TextBox>
                </Grid>
            </DockPanel>
            <DockPanel>
                <editors:CategoryChooser HorizontalAlignment="Left" />
            </DockPanel>
            <DockPanel>
                <Label Content="дата" />
                <editors:ComboBoxDatePicker Year="{Binding FromYear, Mode=TwoWay}"
                                        Month="{Binding FromMonth, Mode=TwoWay}"
                                        Day="{Binding FromDay, Mode=TwoWay}" />
                <Label Content="давность" Margin="10,0,0,0" Width="60" />
                <editors:DateOffsetPicker DateOffset="{Binding DateOffset}">
                    <editors:DateOffsetPicker.Resources>
                        <Style TargetType="DockPanel" />
                    </editors:DateOffsetPicker.Resources>
                </editors:DateOffsetPicker>
            </DockPanel>
            <DockPanel DataContext="{Binding DataContext, ElementName=editor}" Visibility="{Binding ShowIcdDisease, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Label Content="диагноз МКБ" />
                <StackPanel>
                    <controls:SearchTree DataContext="{Binding DiagnosisSearch}" />
                </StackPanel>
            </DockPanel>
            <DockPanel>
                <Label Content="комментарий" />
                <TextBox Text="{Binding Comment}" />
            </DockPanel>
        </StackPanel>

        <StackPanel Grid.Column="2" Margin="20,0,0,0" VerticalAlignment="Center">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="0,0,0,10" />
                    <!--<Setter Property="Padding" Value="3" />-->
                    <!--<Setter Property="Height" Value="23" />-->
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                </Style>
            </StackPanel.Resources>

            <Button Command="{Binding DataContext.AddHealthRecordCommand, RelativeSource={RelativeSource AncestorType=UserControl, AncestorLevel=2}}" ToolTip="Добавляет запись"
                    Margin="0,0,0,20">
                <DockPanel>
                    <Image Source="{StaticResource addImage}" Margin="0,0,5,0" />
                    <TextBlock Text="Добавить" />
                </DockPanel>
            </Button>
            <Button Command="{Binding Editable.CommitCommand}" ToolTip="Сохраняет измнения и закрывает редактор">
                <DockPanel>
                    <Image Source="{StaticResource saveImage}" Margin="0,0,5,0" />
                    <TextBlock Text="Закрыть" />
                </DockPanel>
            </Button>
            <Button Command="{Binding Editable.RevertCommand}" ToolTip="Закрывает редактор без сохранения изменений">
                <DockPanel>
                    <Image Source="{StaticResource closeImage}" Margin="0,0,5,0" />
                    <TextBlock Text="Отменить" />
                </DockPanel>
            </Button>
            <Button Command="{Binding Editable.DeleteCommand}" ToolTip="Удаляет запись">
                <DockPanel>
                    <TextBlock Text="Удалить" Margin="21,0,0,0" />
                </DockPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>