<UserControl x:Class="Diagnosis.App.Controls.Card.HealthRecord"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Diagnosis.App.Controls"
             xmlns:Forms="clr-namespace:Diagnosis.App.Controls.Forms" 
             xmlns:app="clr-namespace:Diagnosis.App"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             MinHeight="25"
             Focusable="True"
             IsTabStop="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel>
            <StackPanel Visibility="{Binding IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel x:Name="editor" >
                    <controls:InputTextBox DataContext="{Binding AutoComplete}" />                    
                    <DockPanel Visibility="{Binding Symptom.Words.Count, Converter={StaticResource CountToVisibility}, FallbackValue=Collapsed}">
                        <TextBlock DockPanel.Dock="Top">Слова:</TextBlock>
                        <ListView ItemsSource="{Binding Symptom.Words}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <controls:TreeItem />
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </DockPanel>
                    <Forms:HealthRecordEditor />
                </StackPanel>

            </StackPanel>

            <Grid Visibility="{Binding IsSelected, Converter={StaticResource NegBooleanToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="{Binding Name}" />
                <TextBlock Grid.Column="1" Text="{Binding Diagnosis.Name, FallbackValue=''}" />
                <TextBlock Grid.Row="1" Text="{Binding Date}" />
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding NumValue, StringFormat={}{0:G6}}" />
                <TextBlock Grid.Row="2" Text="{Binding Category}" />
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>