<UserControl x:Class="Diagnosis.App.Controls.Card.HealthRecord"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Diagnosis.App.Controls"
             xmlns:Forms="clr-namespace:Diagnosis.App.Controls.Forms" 
             xmlns:app="clr-namespace:Diagnosis.App"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             MinHeight="50"
             Focusable="True"
             IsTabStop="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel>
            <StackPanel Visibility="{Binding IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel x:Name="input">
                    <controls:AutoComplete DataContext="{Binding SymptomAutoComplete}" />
                    <!--<controls:GroupsTree DataContext="{Binding Path=Words, Source={x:Static app:EntityManagers.WordsManager}}" MaxHeight="200" />-->           
                    <Forms:HealthRecordEditor />
                    <DockPanel Visibility="{Binding Words.Count, Converter={StaticResource CountToVisibility}}">
                        <TextBlock DockPanel.Dock="Top">Выбранные симптомы:</TextBlock>
                        <ListView ItemsSource="{Binding Symptom.Words}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <controls:TreeItem />
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </DockPanel>
                </StackPanel>
            </StackPanel>

            <StackPanel Visibility="{Binding IsSelected, Converter={StaticResource NegBooleanToVisibilityConverter}}">
                <TextBlock Text="{Binding Diagnosis.Name}" />
                <ItemsControl x:Name="symptoms"
                          ItemsSource="{Binding Symptom.Words}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </StackPanel>

        <DockPanel Grid.Column="1"
                   Visibility="{Binding DataContext.FastAddingMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource NegBooleanToVisibilityConverter}}">
            <TextBox Text="{Binding Comment}" />
        </DockPanel>
    </Grid>
</UserControl>