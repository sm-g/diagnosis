<UserControl x:Class="Diagnosis.App.Controls.Card.PatientHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="30" d:DesignWidth="300">
    <DockPanel>
        <TextBlock Style="{StaticResource ScreenTitle}" 
                   TextWrapping="Wrap"
                   MinWidth="100" >
            <TextBlock.Text>
                <MultiBinding StringFormat='{}{0} {1} {2}'>
                    <Binding Path="LastName" />
                    <Binding Path="FirstName" />
                    <Binding Path="MiddleName" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>

        <TextBlock Text="{Binding IsMale, Converter={StaticResource SexToSign}}" 
                   Visibility="{Binding LastName.Length, Converter={StaticResource CountToVisibility}, FallbackValue=Collapsed}"
                   FontSize="20"
                   Margin="20,0,5,0"
                   VerticalAlignment="Center"/>
        <TextBlock Margin="5,0,10,0"
                   Visibility="{Binding LastName.Length, Converter={StaticResource CountToVisibility}, FallbackValue=Collapsed}"
                   VerticalAlignment="Center">
            <TextBlock Text="{Binding Age}" />
            <TextBlock Text="{Binding Age, Converter={StaticResource AgeToLabel}}" />
        </TextBlock>
    </DockPanel>
</UserControl>