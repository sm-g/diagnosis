<UserControl x:Class="Diagnosis.App.Controls.CardParts.Appointment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:Diagnosis.App.Converters"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <!-- ShortAppointmentViewModel-->
    <DockPanel MinWidth="70">
        <TextBlock Text="{Binding DateTime, Converter={StaticResource DateLabel}}"
                                       DockPanel.Dock="Top" />
        <TextBlock Text="{Binding Doctor, Converter={StaticResource ManToShortName}, StringFormat='{}доктор {0}'}"
                                       HorizontalAlignment="Right"
                                       Visibility="{Binding IsDoctorFromCourse, Converter={StaticResource NegBooleanToVisibilityConverter}}" />
    </DockPanel>
</UserControl>