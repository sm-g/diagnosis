<UserControl x:Class="Diagnosis.App.Controls.CardParts.CardItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:controls="clr-namespace:Diagnosis.App.Controls"
             xmlns:search="clr-namespace:Diagnosis.App.Controls.Search"
             xmlns:card="clr-namespace:Diagnosis.App.Controls.CardParts"
             xmlns:headers="clr-namespace:Diagnosis.App.Controls.Headers"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Style>
        <Style TargetType="UserControl">
            <Setter Property="Width" Value="200" />
        </Style>
    </UserControl.Style>

    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Редактировать" InputGestureText="F2" Command="{Binding EditCommand}" />
            <MenuItem Header="Добавить курс" Command="{Binding StartCourseCommand}" />
            <MenuItem Header="Добавить осмотр" Command="{Binding AddAppointmentCommand}" />
            <MenuItem Header="Открыть" Command="{Binding OpenCommand}" />
            <MenuItem Header="Удалить" InputGestureText="Del" Command="{Binding DeleteCommand}" />
        </ContextMenu>
    </UserControl.ContextMenu>

    <UserControl.Resources>
        <controls:HrsHolderDataTemplateSelector x:Key="cardItemSelector">
            <controls:HrsHolderDataTemplateSelector.AppointmentTemplate>
                <DataTemplate>
                    <headers:Appointment DataContext="{Binding Holder}" />
                </DataTemplate>
            </controls:HrsHolderDataTemplateSelector.AppointmentTemplate>
            <controls:HrsHolderDataTemplateSelector.CourseTemplate>
                <DataTemplate>
                    <headers:Course DataContext="{Binding Holder}" />
                </DataTemplate>
            </controls:HrsHolderDataTemplateSelector.CourseTemplate>
            <controls:HrsHolderDataTemplateSelector.PatientTemplate>
                <DataTemplate>
                    <headers:Patient DataContext="{Binding Holder}" />
                </DataTemplate>
            </controls:HrsHolderDataTemplateSelector.PatientTemplate>
        </controls:HrsHolderDataTemplateSelector>
    </UserControl.Resources>

    <Grid>
        <ContentPresenter Content="{Binding}"  ContentTemplateSelector="{StaticResource cardItemSelector}">
        </ContentPresenter>
    </Grid>
</UserControl>