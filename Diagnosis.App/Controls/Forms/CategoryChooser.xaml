<UserControl xmlns:Controls="clr-namespace:Diagnosis.App.Controls"  
             x:Class="Diagnosis.App.Controls.Forms.CategoryChooser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Controls:RadioListBox ItemsSource="{Binding Categories}"
                               Focusable="False"
                               ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                               SelectedItem="{Binding Category}">
            
            <Controls:RadioListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid  />
                </ItemsPanelTemplate>
            </Controls:RadioListBox.ItemsPanel>
            <Controls:RadioListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </Controls:RadioListBox.ItemTemplate>
        </Controls:RadioListBox>

    </Grid>
</UserControl>