<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Diagnosis.App.Controls"
             xmlns:search="clr-namespace:Diagnosis.App.Controls.Search"
             xmlns:beh="clr-namespace:Diagnosis.App.Behaviors"
             x:Class="Diagnosis.App.Controls.Search.SearchTree"
             mc:Ignorable="d"
             d:DesignHeight="200"
             d:DesignWidth="300"
             x:Name="searchTree"
             GotFocus="UserControl_GotFocus"
             LostFocus="UserControl_LostFocus">
    <!--PopupSearch<>-->
    <UserControl.Resources>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <DockPanel>
            <ToggleButton Content="Полный список"
                          ToolTip="Список с подрубриками (например, А01.5)"
                          IsChecked="{Binding DataContext.IcdTopLevelOnly, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource NegateBoolean}}" />
            <search:Filter x:Name="input"
                           Grid.Column="1"
                           Margin="10,0,0,0"
                           DataContext="{Binding Filter}"
                           WatermarkText="Код или описание"
                           PreviewInputKeyDown="input_PreviewKeyDown" />
        </DockPanel>
        <DockPanel x:Name="popup"
                   Grid.Row="1"
                   Visibility="{Binding IsResultsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <!--<controls:FullTree x:Name="results"
                               FocusManager.IsFocusScope="True"
                               ItemsSource="{Binding Collection, ElementName=searchTree}">
                <controls:FullTree.ItemContainerStyle>
                    <Style TargetType="TreeViewItem"
                           BasedOn="{StaticResource TreeViewItemStyle}">
                        -->
            <!--<Setter Property="Template"
                                Value="{StaticResource TreeViewItemRightToggleControl}" />-->
            <!--
                        <EventSetter Event="KeyDown"
                                     Handler="item_KeyDown" />
                        <EventSetter Event="MouseUp"
                                     Handler="item_MouseUp" />
                    </Style>
                </controls:FullTree.ItemContainerStyle>
                <controls:FullTree.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" />
                    </DataTemplate>
                </controls:FullTree.ItemTemplate>
            </controls:FullTree>-->
            <TreeView x:Name="results1"
                      Style="{StaticResource TreeViewStyle}"
                      ScrollViewer.IsDeferredScrollingEnabled="True"
                      FocusManager.IsFocusScope="True"
                      ItemsSource="{Binding Collection, ElementName=searchTree}">
                <TreeView.ItemContainerStyle>
                    <Style TargetType="TreeViewItem"
                           BasedOn="{StaticResource TreeViewItemStyle}">
                        <EventSetter Event="KeyDown"
                                     Handler="item_KeyDown" />
                        <EventSetter Event="MouseUp"
                                     Handler="item_MouseUp" />
                    </Style>
                </TreeView.ItemContainerStyle>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                        <TextBlock Text="{Binding}" />
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </DockPanel>
    </Grid>
</UserControl>