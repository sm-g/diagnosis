<UserControl x:Class="Diagnosis.App.Controls.Headers.Patient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="patient"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <!--  Patient or VM -->
    <DockPanel>
        <TextBlock MinWidth="30"
                   VerticalAlignment="Center"
                   Text="{Binding Converter={StaticResource ManToName}, ConverterParameter=True}" />
        <TextBlock Margin="20,0,5,0"
                   VerticalAlignment="Center"
                   FontSize="20"
                   Text="{Binding IsMale,
                                  Converter={StaticResource SexToSign}}" />
        <TextBlock Margin="5,0,10,0"
                   VerticalAlignment="Center">
            <TextBlock Text="{Binding Age}" />
            <TextBlock Text="{Binding Age, Converter={StaticResource AgeToLabel}}" />
        </TextBlock>
    </DockPanel>
</UserControl>