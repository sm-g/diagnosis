<UserControl x:Class="Diagnosis.App.Controls.Headers.Patient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">
    <!--Patient-->
    <DockPanel>
        <TextBlock Text="{Binding Actual, Converter={StaticResource ManToShortName}}"
                   VerticalAlignment="Center"
                   MinWidth="30" />
        <TextBlock Text="{Binding IsMale, Converter={StaticResource SexToSign}}"
                   FontSize="20"
                   Margin="20,0,5,0"
                   VerticalAlignment="Center" />
        <TextBlock Margin="5,0,10,0"
                   VerticalAlignment="Center">
            <TextBlock Text="{Binding Age}" />
            <TextBlock Text="{Binding Age, Converter={StaticResource AgeToLabel}}" />
        </TextBlock>
    </DockPanel>
</UserControl>